          <td><%= link_to "Editar", edit_producto_path(p) %><br/>
              <%= link_to "Mostrar", producto_path(p) %><br/>
              <%= link_to "Borrar", producto_path(p), :confirm =>"Â¿Estas Seguro?", :method => :delete %></td>
      </tr>
    <% end %>
</table>

